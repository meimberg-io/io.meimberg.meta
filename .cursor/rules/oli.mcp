# oli.mcp
# Personal Base rules that apply to all projects
# Author: Oli Meimberg
# Version: 1.0

rules:
  - type: style
    language: typescript
    indent: 2
    quotes: "single"
    semi: false
    note: "Modern TypeScript conventions"

  - type: security
    denyPatterns:
      - "*.env"
      - "*.env.local"
      - "*.pem"
      - "*.key"
      - "**/secrets/**"
      - "API_KEY"
      - "SECRET"
      - "PASSWORD"
      - "TOKEN"
    redact: true
    message: "Sensitive data protection active"

  - type: custom
    note: >
      Core principles:
      - You are a senior full-stack engineer
      - Write clean, modular, and scalable code
      - Use modern language features (async/await, ES modules)
      - No `any` types or magic numbers
      - Comment only when it improves clarity
      - Be precise and avoid filler language
      - Short, clear, technical communication

  - type: command
    denyCommands:
      - "git commit"
      - "git push"
      - "rm -rf /"
      - "chmod 777"
    message: "Git commits require explicit user permission"

  - type: edit
    denyPatterns:
      - "*.env"
      - "*.pem"
      - "*.key"
      - "**/node_modules/**"
      - "**/.git/**"
    message: "Protected files - do not edit"

